<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Android atempts to find the id of the listview during runtime, need to have a specific id -->
    <!-- The TextView needs to have a special id as well, so it is only triggered when listview is empty -->
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@android:color/holo_blue_light">
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EmptyList"
        android:background="@android:color/holo_green_light" />

</LinearLayout>